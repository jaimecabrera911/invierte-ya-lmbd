{
  "openapi": "3.1.0",
  "info": {
    "title": "Invierte Ya - Sistema de Fondos API",
    "version": "1.0.0",
    "description": "API para gestión de fondos de inversión FPV y FIC con autenticación JWT"
  },
  "servers": [
    {
      "url": "https://jwnazw2b41.execute-api.us-east-1.amazonaws.com/Prod",
      "description": "Servidor de producción en AWS"
    },
    {
      "url": "http://localhost:8000",
      "description": "Servidor de desarrollo local"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "UserCreate": {
        "type": "object",
        "required": ["email", "phone", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "Correo electrónico del usuario (usado para autenticación)"
          },
          "phone": {
            "type": "string",
            "description": "Número de teléfono del usuario"
          },
          "password": {
            "type": "string",
            "description": "Contraseña del usuario"
          },
          "notification_preference": {
            "type": "string",
            "enum": ["EMAIL", "SMS"],
            "default": "EMAIL",
            "description": "Preferencia de notificación"
          }
        }
      },
      "UserLogin": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "Correo electrónico del usuario"
          },
          "password": {
            "type": "string",
            "description": "Contraseña del usuario"
          }
        }
      },
      "Token": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string",
            "description": "Token JWT de acceso"
          },
          "token_type": {
            "type": "string",
            "description": "Tipo de token"
          }
        }
      },
      "SubscriptionRequest": {
        "type": "object",
        "required": ["fund_id"],
        "properties": {
          "fund_id": {
            "type": "string",
            "description": "ID del fondo"
          },
          "amount": {
            "type": "number",
            "description": "Monto a invertir (opcional, usa mínimo del fondo si no se especifica)"
          }
        }
      },
      "CancellationRequest": {
        "type": "object",
        "required": ["fund_id"],
        "properties": {
          "fund_id": {
            "type": "string",
            "description": "ID del fondo a cancelar"
          }
        }
      }
    }
  },
  "paths": {
    "/": {
      "get": {
        "summary": "Endpoint raíz",
        "description": "Información básica de la API",
        "responses": {
          "200": {
            "description": "Información de la API",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {"type": "string"},
                    "version": {"type": "string"},
                    "environment": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Health Check",
        "description": "Verificar el estado de la API",
        "responses": {
          "200": {
            "description": "API funcionando correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {"type": "string"},
                    "timestamp": {"type": "string"},
                    "environment": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "summary": "Registrar usuario",
        "description": "Crear una nueva cuenta de usuario",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserCreate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuario registrado exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Token"
                }
              }
            }
          },
          "400": {
            "description": "Error en los datos de entrada"
          },
          "409": {
            "description": "Usuario ya existe"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Iniciar sesión",
        "description": "Autenticar usuario y obtener token JWT",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserLogin"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login exitoso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Token"
                }
              }
            }
          },
          "401": {
            "description": "Credenciales inválidas"
          }
        }
      }
    },
    "/funds": {
      "get": {
        "summary": "Listar fondos disponibles",
        "description": "Obtener lista de todos los fondos de inversión disponibles",
        "responses": {
          "200": {
            "description": "Lista de fondos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "fund_id": {"type": "string"},
                      "name": {"type": "string"},
                      "minimum_amount": {"type": "number"},
                      "category": {"type": "string", "enum": ["FPV", "FIC"]},
                      "is_active": {"type": "boolean"}
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/funds/subscribe": {
      "post": {
        "summary": "Suscribirse a un fondo",
        "description": "Realizar una suscripción a un fondo de inversión",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SubscriptionRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Suscripción exitosa"
          },
          "400": {
            "description": "Error en los datos o fondos insuficientes"
          },
          "401": {
            "description": "Token de autenticación requerido"
          },
          "404": {
            "description": "Usuario o fondo no encontrado"
          }
        }
      }
    },
    "/funds/cancel": {
      "post": {
        "summary": "Cancelar suscripción a un fondo",
        "description": "Cancelar una suscripción activa a un fondo de inversión",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CancellationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Cancelación exitosa"
          },
          "400": {
            "description": "Error en la cancelación"
          },
          "401": {
            "description": "Token de autenticación requerido"
          },
          "404": {
            "description": "Suscripción no encontrada"
          }
        }
      }
    },
    "/users/me": {
      "get": {
        "summary": "Obtener información del usuario autenticado",
        "description": "Obtener detalles del usuario autenticado mediante token JWT",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Información del usuario"
          },
          "401": {
            "description": "Token de autenticación requerido"
          },
          "404": {
            "description": "Usuario no encontrado"
          }
        }
      }
    },
    "/users/me/transactions": {
      "get": {
        "summary": "Obtener transacciones del usuario autenticado",
        "description": "Listar todas las transacciones del usuario autenticado",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 20
            },
            "description": "Número máximo de transacciones a retornar"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de transacciones"
          },
          "401": {
            "description": "Token de autenticación requerido"
          }
        }
      }
    },
    "/users/me/subscriptions": {
      "get": {
        "summary": "Obtener suscripciones del usuario autenticado",
        "description": "Listar suscripciones activas del usuario autenticado",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de suscripciones activas"
          },
          "401": {
            "description": "Token de autenticación requerido"
          }
        }
      }
    },
    "/init-funds": {
      "post": {
        "summary": "Inicializar fondos de prueba",
        "description": "Crear fondos de ejemplo para testing (solo desarrollo)",
        "responses": {
          "200": {
            "description": "Fondos inicializados exitosamente"
          }
        }
      }
    }
  }
}